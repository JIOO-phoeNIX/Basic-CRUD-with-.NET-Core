@model Task1.DataAccess.Models.Items;
@{
    ViewData["Title"] = "Create an Item";
}

<h1>Create a new Item</h1>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">   
    <hr />
